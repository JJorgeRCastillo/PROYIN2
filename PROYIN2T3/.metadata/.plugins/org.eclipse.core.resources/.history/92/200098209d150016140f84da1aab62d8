package com.proyin.dao;

import java.sql.CallableStatement;
import java.sql.Connection;
import java.util.List;

import com.proyin.adaptadores.IDTO;
import com.proyin.contratos.IDAO;
import com.proyin.entidades.PersonaNatural;
import com.proyin.entidades.SocioNatural;

public class SocioDAO implements IDAO{

	
	public boolean insert(IDTO objSocio, IDTO objUsuario, float aporte) throws Exception {
		Connection objConexion = Conexion.getInstance().ConectarBD2();
		SocioNatural objSocioNatural = (SocioNatural)objSocio;
		boolean respuesta = false;
		try{
			CallableStatement cstm = objConexion.prepareCall("{call SP_INSERTAR_SOCIO((?,?,?,?,?,?,?,?,?,?,?,?)}");
			objConexion.setAutoCommit(false); 
			
			String nombreSocio = objSocioNatural.getObjPersonaNatural().getApPaterno() + " " +
						         objSocioNatural.getObjPersonaNatural().getApMaterno() + " " +
					             objSocioNatural.getObjPersonaNatural().getNombres();
			
			cstm.setString(1, objSocioNatural.getObjPersonaNatural().getIdPersona()); // idPersona
			cstm.setString(2, nombreSocio); // nombre socio
			cstm.setString(2, "11"); // estado socio
			cstm.setString(3, objSocioNatural.getObjPersonaNatural().getTipoPersona()); // tipo de persona (N, J)
			cstm.setString(4, objSocioNatural.getObjOficina().getIdOficina());
			
			
			cstm.execute();
			objConexion.commit();
			
			respuesta = true;
			
		}catch(Exception ex){
			objConexion.rollback();
			throw ex;
		}finally{
			objConexion.setAutoCommit(true);
			objConexion.close();
		}
		return respuesta;
	}
	
