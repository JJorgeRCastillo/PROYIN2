public class SocioDAO implements IDAO{

	
	public boolean insert(IDTO objSocio, IDTO objUsuario, float aporte) throws Exception {
		Connection objConexion = Conexion.getInstance().ConectarBD2();
		SocioNatural objSocioNatural = (SocioNatural)objSocio;
		boolean respuesta = false;
		try{
			CallableStatement cstm = objConexion.prepareCall("{call SP_INSERTAR_SOCIO(?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)}");
			objConexion.setAutoCommit(false); 
			
			String nombreSocio = objSocioNatural.getObjPersonaNatural().getApPaterno() + " " + 
								 objSocioNatural.getObjPersonaNatural().getApMaterno() + " " +
								 objSocioNatural.getObjPersonaNatural().getNombres();
			/*
			cstm.setString(1, objSocioNatural.getObjPersonaNatural().getIdPersona());
			//cstm.setString(2, );// parametro de socio
			cstm.setString(2, nombreSocio);
			cstm.setString(3, objSocioNatural.getEstado());
			cstm.setString(4, objSocioNatural.getObjPersonaNatural().getTipoPersona());
			cstm.setString(5, objSocioNatural.getObjOficina().getIdOficina());
			cstm.setString(6, objSocioNatural.getTipoTrabajador());
			cstm.setString(7, objSocioNatural.getObservaciones());
			cstm.setFloat(8, objSocioNatural.getAporteInicial());
			cstm.setFloat(9, objSocioNatural.getFondoMortuorio());
			cstm.setFloat(10, objSocioNatural.getDerechoInscripcion());
			cstm.setFloat(11, objSocioNatural.getDerechoSistema());
			cstm.setString(12, objSocioNatural.getObjPersonaNatural().getIdPersona());
			cstm.setString(13, objSocioNatural.getMotivoIngreso());
			cstm.setString(14, objSocioNatural.getpIC());
			cstm.setString(15, objSocioNatural.getDecision());
			*/
			cstm.execute();
			objConexion.commit();
			
			respuesta = true;
			
		}catch(Exception ex){
			objConexion.rollback();
			throw ex;
		}finally{
			objConexion.setAutoCommit(true);
			objConexion.close();
		}
		return respuesta;
	}
	
